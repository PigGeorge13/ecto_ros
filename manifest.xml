<package>
  <description brief="ecto_ros">

     ecto_ros is the ecto bindings for ROS.

  </description>
  <author>Ethan Rublee</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/ecto_ros</url>
  
  <depend package="roscpp"/>
  <depend package="rospy"/>
  
  <!-- ros messages exposed in ecto -->
  <depend package="sensor_msgs"/>
  <depend package="geometry_msgs"/>
  <depend package="nav_msgs"/>
  <depend package="diagnostic_msgs"/>
  <depend package="actionlib_msgs"/>
  
  <!-- misc package deps -->
  <depend package="message_filters"/>
  
  <export>
    <python path="${prefix}/build/lib"/>
    <cpp cflags="-I{prefix}/include"/>
  </export>
  
  <rosdep name="opencv2.3"/>
  <rosdep name="ecto0.1"/>
  <rosdep name="ecto_opencv"/>
  
</package>


